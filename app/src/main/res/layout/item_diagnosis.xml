<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/secondary_color"
        android:layout_marginBottom="16dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:padding="12dp"> <!-- Added padding inside the card -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:minHeight="120dp"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvDiagnosisDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Diagnosis Date"
                android:textColor="@color/neutral_dark_color"
                android:textFontWeight="600"
                android:textSize="20sp"
                android:maxWidth="320dp"
                android:lineSpacingExtra="4dp"
                android:breakStrategy="high_quality"
                android:singleLine="false"
                android:ellipsize="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnViewDiagnosis"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:backgroundTint="@color/accent_color"
                android:minHeight="48dp"
                android:text="@string/view_diagnosis"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDiagnosisDate"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
