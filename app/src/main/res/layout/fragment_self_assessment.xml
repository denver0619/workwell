<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <!-- Title -->
        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/tvRoutineTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/asmt_title"
            android:textFontWeight="600"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/neutral_white_color"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Stiffness Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asmt_category1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/neutral_white_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asmt_question1"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/neutral_white_color" />

        <SeekBar
            android:id="@+id/seekBarStiffness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progressTint="@color/neutral_white_color" />

        <TextView
            android:id="@+id/tvStiffnessValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/asmt_initial_value"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_white_color" />

        <!-- Pain Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asmt_category2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/neutral_white_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asmt_question2"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/neutral_white_color" />

        <SeekBar
            android:id="@+id/seekBarPain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progressTint="@color/neutral_white_color" />

        <TextView
            android:id="@+id/tvPainValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/asmt_initial_value"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_white_color" />

        <!-- Difficulty Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asmt_category3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/neutral_white_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asmt_question3"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/neutral_white_color" />

        <SeekBar
            android:id="@+id/seekBarDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progressTint="@color/neutral_white_color" />

        <TextView
            android:id="@+id/tvDifficultyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/asmt_initial_value"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_white_color" />

        <!-- Awareness Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asmt_category4"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/neutral_white_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asmt_question4"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/neutral_white_color" />

        <SeekBar
            android:id="@+id/seekBarAwareness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progressTint="@color/neutral_white_color" />

        <TextView
            android:id="@+id/tvAwarenessValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/asmt_initial_value"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_white_color" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_button"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/accent_color"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
