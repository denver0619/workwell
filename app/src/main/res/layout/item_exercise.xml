<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvExerciseItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textColor="@color/neutral_white_color"
        android:textSize="16sp"
        android:layout_weight="2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvExerciseItemReps"
        android:textColor="@color/neutral_white_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Reps: 10" />

    <TextView
        android:id="@+id/tvExerciseItemDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:text="Duration: 30 milliseconds" />
</LinearLayout>
